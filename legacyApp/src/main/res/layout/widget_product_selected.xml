<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/product_selected_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            tools:text="კუბდარი"
            style="@style/Text.List.Title"/>

        <TextView
            android:id="@+id/product_selected_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            style="@style/Text.List.Supporting"
            tools:text="რაოდენობა: 4"/>

        <TextView
            android:id="@+id/product_selected_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            style="@style/Text.List.Supporting"
            tools:text="ფასი: 4.00ლ"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <dev.xinto.cashier.legacy.ui.view.IconButton
            android:id="@+id/product_selected_action_edit"
            style="@style/IconButton.Primary"
            app:srcCompat="@drawable/ic_edit"
            android:layout_marginEnd="12dp"/>

        <dev.xinto.cashier.legacy.ui.view.IconButton
            android:id="@+id/product_selected_action_remove"
            style="@style/IconButton.Danger"
            app:srcCompat="@drawable/ic_delete"/>

    </LinearLayout>

</LinearLayout>