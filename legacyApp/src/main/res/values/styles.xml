<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="buttonTint">@color/blue</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.List.Title" parent="Text">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.List.Supporting" parent="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="Text.Dialog.Title" parent="Text">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Dialog.Subtitle" parent="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="Display" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:maxLines">1</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Tab" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="Button">
        <item name="android:minWidth">144dp</item>
        <item name="android:minHeight">72dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Success">
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Warning">
        <item name="android:background">@color/yellow</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.Danger">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IconButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:padding">12dp</item>
        <item name="tint">@color/black</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IconButton.Large">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>

    <style name="IconButton.Small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="IconButton.Primary">
        <item name="android:background">@color/blue</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="IconButton.Primary.Large">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>

    <style name="IconButton.Primary.Small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="IconButton.Success">
        <item name="android:background">@color/green</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="IconButton.Success.Large">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>

    <style name="IconButton.Success.Small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="IconButton.Warning">
        <item name="android:background">@color/yellow</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="IconButton.Warning.Large">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>

    <style name="IconButton.Warning.Small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="IconButton.Danger">
        <item name="android:background">@color/red</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="IconButton.Danger.Large">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
    </style>

    <style name="IconButton.Danger.Small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>